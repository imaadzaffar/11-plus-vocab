<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeGraph">

    <action
        android:id="@+id/action_to_homeGraph"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"
        app:popUpTo="@id/homeGraph" />

    <fragment
        android:id="@+id/learnFragment"
        android:name="com.zafaris.elevenplusvocab.ui.learn.LearnFragment"
        android:label="@string/label_fragment_learn"
        tools:layout="@layout/fragment_learn">
        <action
            android:id="@+id/action_learnFragment_to_testFragment"
            app:destination="@id/testFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/learnFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="setNo"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

    <fragment
        android:id="@+id/testFragment"
        android:name="com.zafaris.elevenplusvocab.ui.test.TestFragment"
        android:label="@string/label_fragment_test"
        tools:layout="@layout/fragment_test">
        <action
            android:id="@+id/action_testFragment_to_statsFragment"
            app:destination="@id/statsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <argument
            android:name="setNo"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

    <fragment
        android:id="@+id/statsFragment"
        android:label="@string/label_fragment_stats">
        <argument
            android:name="setNo"
            app:argType="integer"
            android:defaultValue="0"/>
    </fragment>

    <navigation android:id="@+id/homeGraph"
        app:startDestination="@id/homeFragment">
        <fragment
            android:id="@+id/guideFragment"
            android:label="@string/label_fragment_guide"/>
        <fragment
            android:id="@+id/homeFragment"
            android:name="com.zafaris.elevenplusvocab.ui.home.HomeFragment"
            android:label="@string/label_fragment_home"
            tools:layout="@layout/fragment_home">
            <action
                android:id="@+id/action_homeFragment_to_wordsListFragment"
                app:destination="@id/wordsListFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
            <action
                android:id="@+id/action_homeFragment_to_guideFragment"
                app:destination="@id/guideFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        </fragment>
        <fragment
            android:id="@+id/wordsListFragment"
            android:name="com.zafaris.elevenplusvocab.ui.wordslist.WordsListFragment"
            android:label="@string/label_fragment_wordslist"
            tools:layout="@layout/fragment_wordslist"/>
        <action
            android:id="@+id/action_global_learnFragment"
            app:destination="@id/learnFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_global_testFragment"
            app:destination="@id/testFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_global_statsFragment"
            app:destination="@id/statsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </navigation>

</navigation>