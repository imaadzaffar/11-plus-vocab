<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_set"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    tools:layout_margin="8dp">

     <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/layout_set"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/home_set_play">

         <ImageView
             android:id="@+id/icon_set"
             android:layout_width="36dp"
             android:layout_height="36dp"
             android:layout_marginStart="8dp"
             tools:src="@drawable/ic_icon_play"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent" />

         <TextView
             android:id="@+id/text_set_no"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_marginStart="8dp"
             android:layout_marginTop="4dp"
             tools:text="Set 1"
             android:textColor="@color/textOnDark"
             android:textSize="24sp"
             android:textStyle="bold"
             app:layout_constraintStart_toEndOf="@+id/icon_set"
             app:layout_constraintTop_toTopOf="parent" />

         <TextView
             android:id="@+id/text_words"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="4dp"
             android:layout_marginBottom="8dp"
             android:textColor="@color/textOnDark"
             android:textSize="14sp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="@+id/text_set_no"
             app:layout_constraintTop_toBottomOf="@+id/text_set_no"
             tools:text="Words 1 - 10" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>