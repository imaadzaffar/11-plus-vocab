<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/setCardView"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/setBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_set_play"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_icon_play">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setNoText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:text="Set 10"
                android:textColor="@color/textOnDark"
                android:textSize="24sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/setWordsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Words 225 - 250"
                android:textColor="@color/textOnDark"
                android:textSize="12sp"></TextView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>