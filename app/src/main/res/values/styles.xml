<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/textOnLight</item>
<!--        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>-->
    </style>

    <style name="TextTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textOnLight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarThemeLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:titleTextColor">@color/textOnLight</item>
        <item name="android:textColorSecondary">@color/textOnLight</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolbarThemeDark" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:titleTextColor">@color/textOnDark</item>
        <item name="android:textColorSecondary">@color/textOnDark</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!--<style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>-->

    <style name="errorToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/nunito_bold</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/colorIncorrect</item>
        <item name="stSolidBackground">true</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stRadius">5dp</item>
    </style>

</resources>
